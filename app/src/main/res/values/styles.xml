<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="backgroundColor">#FFFFFF</item>
        <item name="card_background">#FFFFFF</item>
        <item name="card_text_color">#858080</item>
        <item name="action_bar_text">#FFFFFF</item>
        <item name="Text_Color">#1F1E1E</item>
        <item name="settings_text_color">#018ED6</item>
        <item name="Button_Color">#018ED6</item>

        <!--        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->

    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/splashColorPrimary</item>
        <item name="colorPrimaryDark">@color/splashColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="backgroundColor">#FFFFFF</item>
        <item name="Text_Color">#1F1E1E</item>
        <item name="card_text_color">#858080</item>

    </style>

    <style name="SplashDarkTheme"  parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2A353A</item>
        <item name="colorPrimaryDark">#21292D</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="backgroundColor">#1F1E1E</item>
        <item name="card_background">#2A353A</item>
        <item name="Text_Color">#D6D6D6</item>
        <item name="card_text_color">#D6D6D6</item>
        <item name="action_bar_text">#D6D6D6</item>
        <item name="settings_text_color">#ffffff</item>
        <item name="Button_Color">#03AC9C</item>

        <!--        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->

    </style>

    //Dark Theme
    <style name="DarkTheme"  parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2A353A</item>
        <item name="colorPrimaryDark">#21292D</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="backgroundColor">#1F1E1E</item>
        <item name="card_background">#2A353A</item>
        <item name="Text_Color">#D6D6D6</item>
        <item name="card_text_color">#D6D6D6</item>
        <item name="action_bar_text">#D6D6D6</item>
        <item name="settings_text_color">#ffffff</item>
        <item name="Button_Color">#03AC9C</item>

        <!--        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>-->

    </style>


    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>